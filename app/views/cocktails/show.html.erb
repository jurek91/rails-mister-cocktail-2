<h1><%= @cocktail.name %></h1>
<h1>Ingredients:</h1>
<h2><% @cocktail.doses.each do |dose| %></h2>
  <%= dose.ingredient.name %>
  <%= dose.description %>
  <h6><%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %></h6>
  <% end %>


<h2>Add a new dose</h2>
<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.association :ingredient%>
  <%= f.input :description %>
  <%= f.submit %>
<% end %>

<h4><%= link_to "Back to Cocktails", cocktails_path %></h4>
<h4><%= link_to "Edit the Cocktail" %>
<h4><%= link_to "Delete Cocktail", cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure?" }%>
